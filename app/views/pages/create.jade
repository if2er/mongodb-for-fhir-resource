extends ../layout

block content
	.container
		.row
			form.form-horizontal(method="post", action="/#{modelType}/create")
				input(type="hidden", name="content[identifier][0].label", value="#{content.identifier[0].label}")
				//- 隐藏表单域，用来更新电影数据，存储电影ID
				.form-group
					label.col-sm-1.control-label(for="inputName") 姓名
					.col-sm-6
						input#inputTitle.form-control(type="text", name="content[name][0].text", value="#{content.name[0].text}")
				.form-group
					label.col-sm-1.control-label(for="inputGender") 性别
					.col-sm-6
						input#inputDoctor.form-control(type="text", name="content[gender]", value="#{content.gender}")
				.form-group
					label.col-sm-1.control-label(for="inputBirth") 生日
					.col-sm-6
						input#inputCountry.form-control(type="text", name="content[birthDate]", value="#{content.birthDate}")
				.form-group
					label.col-sm-1.control-label(for="inputTel") 电话
					.col-sm-6
						input#inputLanguage.form-control(type="text", name="content[telecom][0]", value="#{content.telecom[0].tel}")
				.form-group
					.col-sm-offset-1.col-sm-7
						button.btn.btn-default(type="submit") 录入